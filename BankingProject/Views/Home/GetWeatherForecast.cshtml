@model List<WeatherForecast>

<h1>Weather Forecasts</h1>

@if(Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temperature (°C)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in Model)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Couldn't get weatherforecasts because authorization on api didnt work. either the jwt token was wrong or user not signed in.</p>
}
